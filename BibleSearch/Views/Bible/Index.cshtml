@{
	ViewData["Title"] = "Index";
	Layout = null;

}
<head>
	    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
		 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body id="pageContent">
	<div class="container" >

	<h1 id="header">Search phrases or words in the Bible</h1>

	<form asp-action="Results">
		<div class="input-group mb-3">
				<input name="searchTerm" class="form-control form-control-lg" placeholder="Search here">
			<div class="input-group-append">
				<button type="submit" class="btn btn-outline-secondary btn-lg">Search!</button>
			</div>
		</div>
			<h1 id="header">Filter By Testiment</h1>
		 
		<div class="input-group mb-3">
				<select name="testament" class="form-select form-select-lg mb-3" id="testament">
				<option selected>Choose...</option>
				<option value="1">Old Testament</option>
				<option value="2">New Testament</option>
				<option value="3">Both</option>
			</select>

		</div>
	</form>
	</div>

</body>
